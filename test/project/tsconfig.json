{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "jsx": "preserve",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
